generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Signal {
  id            String   @id @default(cuid())
  date          DateTime
  instrument    String
  direction     String
  entry         Float
  stopLoss      Float
  takeProfits   String
  timeframe     String
  confidence    Int
  rationale_en  String
  rationale_ur  String
  newsRefs      String
  calendarRefs  String
  indicators    String
  sentiment     String
  slug          String   @unique
  htmlPath      String
  createdAt     DateTime @default(now())
}

model Subscriber {
  id           String   @id @default(cuid())
  email        String   @unique
  createdAt    DateTime @default(now())
  lastLoginAt  DateTime?
  isActive     Boolean  @default(true)
}

model MagicToken {
  id          String   @id @default(cuid())
  email       String
  token       String   @unique
  expiresAt   DateTime
  used        Boolean  @default(false)
  createdAt   DateTime @default(now())
}